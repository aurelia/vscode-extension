{
	"compilerOptions": {
		"experimentalDecorators": true,
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"strict": true,
		"outDir": "out",
		"rootDir": "src",
		"strictPropertyInitialization": false,
		"resolveJsonModule": true,
		"skipLibCheck": true
	},
	"include": ["src"],
	"exclude": ["node_modules", ".vscode-test"]
}
