{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "out",
    "rootDir": "..",
    "sourceMap": true,
    "lib": ["es2019"],
    "strictPropertyInitialization": false,
    "declaration": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "types": ["jest"]
  },
  "include": ["common", "step-definitions", "unit", "testLauncher"],
  "exclude": ["node_modules", "out"]
}
